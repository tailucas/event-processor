version: "3.8"
services:
  app:
    image: "${DOCKER_IMAGE}"
    restart: unless-stopped
    build:
      context: .
      args:
        FOO: bar
    logging:
      driver: syslog
      options:
        syslog-address: "${SYSLOG_ADDRESS}"
        syslog-format: "rfc3164"
        tag: "${DEVICE_NAME}"
    tmpfs:
    - /tmp
    hostname: ${DEVICE_NAME}
    ports:
      - "4041:4040"
      - "80:8080"
    volumes:
      - ./data:/data
      - /dev/log:/dev/log
    env_file:
      - .env
