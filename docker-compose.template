version: "3.8"
services:
  app:
    build: .
    restart: unless-stopped
    logging:
      driver: syslog
    tmpfs:
    - /tmp
    hostname: __DOCKER_HOSTNAME__
    ports:
      - "4041:4040"
      - "80:8080"
    volumes:
      - ./data:/data
      - /dev/log:/dev/log
    environment:
      FLASK_ENV: development
